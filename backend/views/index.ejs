<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Mobile Store</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.tailwindcss.com"></script>

    <style>
      /* subtle glass + glow */
      .glass {
        background: rgba(24, 24, 27, 0.85);
        backdrop-filter: blur(10px);
      }
    </style>
  </head>

  <body class="bg-gradient-to-br from-black via-zinc-900 to-black text-white min-h-screen">

    <!-- TOP BAR -->
    <header class="sticky top-0 z-50 glass border-b border-zinc-800">
      <div class="max-w-7xl mx-auto px-6 py-4 flex items-center justify-between">
        <h1 class="text-xl font-bold tracking-tight">
          ðŸ“± <span class="text-blue-400">Mobile</span>Store
        </h1>

        <nav class="flex gap-6 text-sm text-zinc-300">
          <a href="/" class="hover:text-white">Home</a>
          <a href="/read" class="hover:text-white">Products</a>
          <a href="/create" class="hover:text-white">Add</a>
        </nav>
      </div>
    </header>

    <!-- HERO -->
    <section class="max-w-7xl mx-auto px-6 pt-14 pb-10">
      <h2 class="text-4xl md:text-5xl font-extrabold tracking-tight">
        Choose Your
        <span class="text-blue-500">Brand</span>
      </h2>

      <p class="text-zinc-400 mt-4 max-w-xl">
        Explore smartphones by top brands. Clean UI, fast experience, premium feel.
      </p>
    </section>

    <!-- BRAND GRID -->
    <main class="max-w-7xl mx-auto px-6 pb-20">
      <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 gap-6">

        <% if (brands.length > 0) { %>
          <% brands.forEach((brand) => { %>

            <a
              href="/brand/<%= brand.name %>"
              class="group relative rounded-2xl p-5 bg-zinc-900 border border-zinc-800
                     hover:border-blue-500 transition-all duration-300
                     hover:-translate-y-1 hover:shadow-xl hover:shadow-blue-500/10"
            >
              <!-- soft glow -->
              <div
                class="absolute inset-0 rounded-2xl opacity-0 group-hover:opacity-100
                       bg-gradient-to-br from-blue-500/10 to-purple-500/10 transition"
              ></div>

              <!-- logo -->
              <div class="relative h-20 flex items-center justify-center">
                <img
                  src="<%= brand.image %>"
                  alt="<%= brand.name %>"
                  class="max-h-14 object-contain transition group-hover:scale-110"
                />
              </div>

              <!-- text -->
              <h3 class="relative mt-4 font-semibold tracking-tight text-center">
                <%= brand.name %>
              </h3>

              <p class="relative text-sm text-zinc-400 text-center mt-1">
                <%= brand.count %> models
              </p>
            </a>

          <% }) %>
        <% } else { %>
          <p class="text-zinc-500">No brands found</p>
        <% } %>

      </div>
    </main>

<!-- FOOTER -->
<footer class="border-t border-zinc-800 py-8 text-center text-zinc-500 text-sm">
  <div class="flex flex-col items-center gap-2">
    <p>
      Â© <%= new Date().getFullYear() %> MobileStore â€¢ Premium UI
    </p>

    <p class="text-zinc-400">
      Built by
      <a
        href="https://github.com/Nakul-Shakya"
        target="_blank"
        class="text-blue-400 hover:underline font-medium"
      >
        Nakul Shakya
      </a>
    </p>
  </div>
</footer>


  </body>
</html>


